<Window
    x:Class="MediaConverter.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:localModels="clr-namespace:MediaConverter.Models"
    xmlns:localViewModels="clr-namespace:MediaConverter.ViewModels"
    xmlns:localViews="clr-namespace:MediaConverter.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SHE | MediaCoverter"
    Width="Auto"
    Height="600"
    Background="#FFE8E6E6"
    mc:Ignorable="d">

    <Window.Resources>
        <DataTemplate DataType="{x:Type localViewModels:RecoveryOriginalViewModel}">
            <localViews:RecoveryOriginalView />
        </DataTemplate>
    </Window.Resources>


    <!--<DataTemplate DataType="{x:Type localViewModels:RecoveryOriginalViewModel}">
        <localViews:RecoveryOriginalView />
    </DataTemplate>-->



    <Grid Name="MainGrid" Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel
            Name="NavigationLeft"
            Margin="0,0,10,0"
            Orientation="Vertical">
            <TextBlock
                Margin="0,0,0,10"
                FontSize="15"
                FontWeight="Normal"
                Foreground="#FF4F4F4F"
                Text="Auswahl" />
            <Border Background="#FFEEEEEE" CornerRadius="5">
                <TreeView
                    Name="trvNodes"
                    Margin="5,5,10,15"
                    Background="Transparent"
                    BorderThickness="0"
                    ItemsSource="{Binding TreeList}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDoubleClick">
                            <i:InvokeCommandAction Command="{Binding ClickSelect}" CommandParameter=""/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <TreeView.Resources>
                        <HierarchicalDataTemplate DataType="{x:Type localModels:Tree}" ItemsSource="{Binding Nodes}">
                            <StackPanel Margin="0,10,0,10" Orientation="Horizontal">
                                <Image x:Name="TreeIcon" Source="{Binding Image}" />

                                <TextBlock
                                    Padding="10,0,0,0"
                                    Cursor="Hand"
                                    FontSize="15"
                                    FontWeight="Normal"
                                    Foreground="#FF0060CF"
                                    Text="{Binding HeadLine}" />
                                <TextBlock
                                    FontSize="15"
                                    FontWeight="Normal"
                                    Foreground="#FF8D8D8D"
                                    Text=" (" />
                                <TextBlock
                                    FontSize="15"
                                    FontWeight="Normal"
                                    Foreground="#FF8D8D8D"
                                    Text="{Binding Nodes.Count}" />
                                <TextBlock
                                    FontSize="15"
                                    FontWeight="Normal"
                                    Foreground="#FF8D8D8D"
                                    Text=")" />
                            </StackPanel>

                        </HierarchicalDataTemplate>
                        <DataTemplate DataType="{x:Type localModels:TreeNode}">
                            <StackPanel Margin="5,0,0,0" Orientation="Horizontal">

                                <TextBlock
                                    FontSize="13"
                                    FontWeight="Normal"
                                    Foreground="#FF4F4F4F"
                                    Text="{Binding Select}" />

                            </StackPanel>
                        </DataTemplate>
                    </TreeView.Resources>
                </TreeView>

            </Border>
        </StackPanel>


        <Border
            Grid.Column="1"
            Background="#FFEEEEEE"
            CornerRadius="5">
            <!--  Hier ist das ContentControl  -->
            <ContentControl
                Grid.Column="1"
                Margin="10"
                Content="{Binding SelectedContentControl}" />
        </Border>

        <!--<Grid Background="White" HorizontalAlignment="Right" VerticalAlignment="Top"  >

         overlay with hint text

            <TextBlock Margin="5,2" MinWidth="50" Text="Suche..."
                   Foreground="LightSteelBlue" Visibility="{Binding ElementName=txtSearchBox, Path=Text.IsEmpty, Converter={StaticResource MyBoolToVisibilityConverter}}" />

         enter term here

            <TextBox MinWidth="50" Name="txtSearchBox" Background="Transparent" />
        </Grid>-->

    </Grid>


</Window>